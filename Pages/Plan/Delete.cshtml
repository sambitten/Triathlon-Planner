@page
@model EventTrainer.Pages.Plan.DeleteModel

@{
    ViewData["Title"] = "Delete Training Plan";
}

<div class="container mt-5">
    <div class="col-md-8 col-lg-6">
        <h1 class="display-4">Delete</h1>

        <h3 class="my-4 text-danger">Are you sure you want to delete this?</h3>

        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <h4 class="card-title">Training Plan Details</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.TrainingToDo.CycleDistance)
                    </dt>
                    <dd class="col-sm-3">
                        @Html.DisplayFor(model => model.TrainingToDo.CycleDistance)
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.TrainingToDo.CycleTime)
                    </dt>
                    <dd class="col-sm-3">
                        @Html.DisplayFor(model => model.TrainingToDo.CycleTime)
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.TrainingToDo.SwimDistance)
                    </dt>
                    <dd class="col-sm-3">
                        @Html.DisplayFor(model => model.TrainingToDo.SwimDistance)
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.TrainingToDo.SwimTime)
                    </dt>
                    <dd class="col-sm-3">
                        @Html.DisplayFor(model => model.TrainingToDo.SwimTime)
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.TrainingToDo.RunDistance)
                    </dt>
                    <dd class="col-sm-3">
                        @Html.DisplayFor(model => model.TrainingToDo.RunDistance)
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.TrainingToDo.RunTime)
                    </dt>
                    <dd class="col-sm-3">
                        @Html.DisplayFor(model => model.TrainingToDo.RunTime)
                    </dd>
                </dl>
            </div>
        </div>
    </div>

    <form method="post" class="d-flex gap-2">
        <input type="hidden" asp-for="TrainingToDo.ID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>