@model EventTrainer.Pages.Shared._ProgressCirclePartialModel

<div class="progress-circle text-center" style="position: relative;">
    <svg class="progress-ring test" width="200" height="200" style="transform: rotate(-90deg)">
        <circle class="progress-ring__circle background"
                stroke="@Model.BackgroundStroke"
                stroke-width="15"
                fill="transparent"
                r="80"
                cx="100"
                cy="100" />
        <circle class="progress-ring__circle foreground"
                stroke="@Model.ForegroundStroke"
                stroke-width="15"
                stroke-linecap="round"
                fill="transparent"
                r="80"
                cx="100"
                cy="100"
                stroke-dasharray="@(2*3.14*80)" stroke-dashoffset="@((2*3.14*80) * ((100 - Model.PercentProgress)/100))">
        </circle>
    </svg>

    <div class="progress-contents d-flex flex-column align-items-center justify-content-center" style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);">
        <img class="activity-icon" src="@Model.IconUrl" height="55" width="65" />
        <span class="activity-number">@String.Format("{0:n0}", Model.DisplayNumber)</span>
        <span class="activity-unit">@Model.Unit</span>
    </div>
</div>
