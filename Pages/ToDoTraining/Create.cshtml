@page 
@model EventTrainer.Pages.ToDoTraining.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>TrainingToDo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TrainingToDo.ExerciseType" class="control-label"></label>
                <select asp-for="TrainingToDo.ExerciseType" asp-items="Html.GetEnumSelectList<EventTrainer.Models.TrainingDone.TypeOfExercise>()">
                    <option value="">type of exercise...</option>
                </select>
                <span asp-validation-for="TrainingToDo.ExerciseType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrainingToDo.Date" class="control-label"></label>
                <input asp-for="TrainingToDo.Date" class="form-control" type="date" />
                <span asp-validation-for="TrainingToDo.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrainingToDo.Distance" class="control-label"></label>
                <input asp-for="TrainingToDo.Distance" class="form-control" />
                <span asp-validation-for="TrainingToDo.Distance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrainingToDo.Time" class="control-label"></label>
                <input asp-for="TrainingToDo.Time" class="form-control" />
                <span asp-validation-for="TrainingToDo.Time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
